{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "vitest/globals",
      "node",
      "@testing-library/jest-dom",
      "vitest/importMeta"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/tests/*": ["./tests/*"],
      "@rehab-grid/core": ["./src/index.ts"],
      "@rehab-grid/core/*": ["./src/*"]
    },
    "allowImportingTsExtensions": false,
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
