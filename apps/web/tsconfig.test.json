{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "vitest/globals",
      "node",
      "@testing-library/jest-dom",
      "vitest/importMeta"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/tests/*": ["./tests/*"],
      "@/components/*": ["../../packages/ui/src/components/*"],
      "@/lib/*": ["../../packages/core/src/lib/*"],
      "@/utils/*": ["../../packages/core/src/utils/*"],
      "@/hooks/*": ["../../packages/core/src/hooks/*"],
      "@/types": ["../../packages/core/src/types"],
      "@/types/*": ["../../packages/core/src/types/*"],
      "@rehab-grid/core": ["../../packages/core/src"],
      "@rehab-grid/core/*": ["../../packages/core/src/*"],
      "@rehab-grid/ui": ["../../packages/ui/src"],
      "@rehab-grid/ui/*": ["../../packages/ui/src/*"],
      "@rehab-grid/pages": ["../../packages/pages/src"],
      "@rehab-grid/pages/*": ["../../packages/pages/src/*"]
    },
    "allowImportingTsExtensions": false,
    "moduleResolution": "bundler"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", ".next", "out", "coverage"]
}
