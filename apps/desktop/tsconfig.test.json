{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "vitest/globals",
      "node",
      "@testing-library/jest-dom",
      "vitest/importMeta"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/tests/*": ["./tests/*"],
      "@rehab-grid/core": ["../../packages/core/src/index.ts"],
      "@rehab-grid/core/*": ["../../packages/core/src/*"],
      "@rehab-grid/ui": ["../../packages/ui/src/index.ts"],
      "@rehab-grid/ui/*": ["../../packages/ui/src/*"],
      "@rehab-grid/pages": ["../../packages/pages/src/index.ts"],
      "@rehab-grid/pages/*": ["../../packages/pages/src/*"],
      "lucide-react": ["../../packages/ui/node_modules/lucide-react"]
    },
    "allowImportingTsExtensions": false,
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "dist", "coverage", ".next", "out", "src-tauri"]
}
